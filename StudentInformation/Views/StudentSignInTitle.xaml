<UserControl x:Class="StudentInformation.Views.StudentSignInTitle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StudentInformation.Views"
             mc:Ignorable="d" 
             Resources="{StaticResource main}"
             d:DesignHeight="50" d:DesignWidth="360">
    <Grid>
        <TextBlock Style="{DynamicResource DefaultFont}"
                       TextAlignment="Center" Grid.ColumnSpan="2">
                <Span Foreground="{DynamicResource ColorRed}"
                      FontSize="25">
                    Hello, Friend!
                </Span>
                <LineBreak />
                <Span Foreground="{DynamicResource ColorBlack}"
                      FontSize="14">
                    We Are Happy To Meet You!
                </Span>
        </TextBlock>
    </Grid>
</UserControl>
